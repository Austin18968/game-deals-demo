#hero h2{font-size:2rem;margin-bottom:.5rem}
.cta{font-size:1.2rem;background:var(--accent);color:#000;border:0;padding:.75rem 2rem;border-radius:30px;cursor:pointer;transition:.2s}
.cta:hover{filter:brightness(1.1)}
#content{display:flex;gap:2rem;padding:2rem;flex:1}
.col{flex:1;display:flex;flex-direction:column}
.gameList{list-style:none;padding:0;margin-top:1rem;max-height:70vh;overflow-y:auto;display:grid;gap:.75rem}
.card{background:#222;border-radius:8px;padding:1rem;display:flex;justify-content:space-between;align-items:center}
.card img{width:80px;height:80px;object-fit:cover;border-radius:6px;margin-right:1rem}
.info{flex:1}
.title{font-weight:700;margin-bottom:.25rem}
.price{color:var(--accent);font-size:1.1rem}
.old{text-decoration:line-through;opacity:.6;margin-left:.5rem}
.notify{background:transparent;border:1px solid var(--accent);color:var(--accent);padding:.4rem .8rem;border-radius:4px;cursor:pointer}
.notify:hover{background:var(--accent);color:#000}
footer{text-align:center;padding:1rem;font-size:.8rem;opacity:.5}
#toast{position:fixed;bottom:2rem;left:50%;transform:translateX(-50%);background:#0007;color:#fff;padding:.75rem 1.5rem;border-radius:6px;display:none}
@media(max-width:800px){#content{flex-direction:column}}

----
FILE: app.js
const browseBtn = document.getElementById('browseBtn');
const content   = document.getElementById('content');
const dealsUL   = document.getElementById('dealsList');
const upcomingUL= document.getElementById('upcomingList');
const searchInp = document.getElementById('search');
const toast     = document.getElementById('toast');

let deals=[], upcoming=[];

browseBtn.onclick = () => {
  content.hidden = false;
  loadDeals();
  loadUpcoming();
  browseBtn.scrollIntoView({behavior:'smooth'});
};

/* ---------- 1. FETCH DEALS (CheapShark) ---------- */
async function loadDeals(){
  if(deals.length) return renderDeals();
  const res = await fetch('https://www.cheapshark.com/api/1.0/deals?storeID=1&upperPrice=50&pageSize=30');
  const data = await res.json();
  deals = data.map(d=>({
    title: d.title,
    sale:  d.salePrice,
    normal:d.normalPrice,
    thumb: d.thumb,
    dealID:d.dealID
  }));
  renderDeals();
}
function renderDeals(){
  dealsUL.innerHTML = deals.map(g=>`
    <li class="card">
      <img src="${g.thumb}" alt="">
      <div class="info">
        <div class="title">${g.title}</div>
        <div class="price">$${g.sale} <span class="old">$${g.normal}</span></div>
      </div>
      <a class="notify" href="https://www.cheapshark.com/redirect?dealID=${g.dealID}" target="_blank">View Deal</a>
    </li>`).join('');
}

/* ---------- 2. UPCOMING (static demo) ---------- */
function loadUpcoming(){
  upcoming = [
    {title:"Grand Touring Saga", date:"2025-07-15", img:"https://via.placeholder.com/150x150/444/fff?text=GT+Saga"},
    {title:"Cyber Runner 2142", date:"2025-08-20", img:"https://via.placeholder.com/150x150/444/fff?text=Cyber"},
    {title:"Fantasy Tactics 3",  date:"2025-09-01", img:"https://via.placeholder.com/150x150/444/fff?text=FT3"},
    {title:"Space Frontiers",   date:"2025-10-10", img:"https://via.placeholder.com/150x150/444/fff?text=SF"}
  ];
  renderUpcoming();
}
function renderUpcoming(){
  upcomingUL.innerHTML = upcoming.map(g=>`
    <li class="card">
      <img src="${g.img}" alt="">
      <div class="info">
        <div class="title">${g.title}</div>
        <div>Releases: ${g.date}</div>
      </div>
      <button class="notify" onclick="subscribeNotify('${g.title}','${g.date}')">Notify me</button>
    </li>`).join('');
}

/* ---------- 3. LIVE SEARCH ---------- */
searchInp.addEventListener('input',()=>{
  const q = searchInp.value.toLowerCase();
  filterList(dealsUL,deals,q);
  filterList(upcomingUL,upcoming,q);
});
function filterList(ul,list,q){
  const cards = ul.querySelectorAll('.card');
  list.forEach((g,i)=>{
    cards[i].style.display = g.title.toLowerCase().includes(q) ? '' : 'none';
  });
}

/* ---------- 4. PUSH NOTIFICATIONS ---------- */
// Register service-worker & ask permission
if('serviceWorker' in navigator){
  navigator.serviceWorker.register('sw.js').then(reg=>console.log('SW registered'));
}
function subscribeNotify(game,date){
  Notification.requestPermission().then(perm=>{
    if(perm!=='granted'){ flash('Permission denied'); return; }
    // Store subscription (demo: just localStorage)
    const subs = JSON.parse(localStorage.getItem('subs')||'[]');
    if(subs.find(s=>s.game===game)){ flash('Already subscribed'); return; }
    subs.push({game,date});
    localStorage.setItem('subs',JSON.stringify(subs));
    flash(`âœ… You'll be notified about ${game}`);
    // TODO: send subs to your real server here
  });
}
function flash(msg){
  toast.textContent=msg; toast.style.display='block';
  setTimeout(()=>toast.style.display='none',2500);
}

----
FILE: sw.js  (service-worker for push)
// Minimal SW â€“ needed for push permission badge & future real pushes
self.addEventListener('push',e=>{
  const data = e.data.json();
  self.registration.showNotification(data.title,{
    body:data.body,
    icon:'icon-192.png',
    badge:'icon-192.png'
  });
});

----
FILE: manifest.json  (so browser offers â€œAdd to home screenâ€)
{
  "name":"GameDeals HQ",
  "short_name":"GameDeals",
  "start_url":"/",
  "display":"standalone",
  "background_color":"#111",
  "theme_color":"#ff9933",
  "icons":[{
    "src":"icon-192.png",
    "sizes":"192x192",
    "type":"image/png"
  }]
}

----
HOW THE NOTIFICATION SYSTEM WORKS
1.  User clicks â€œNotify meâ€ â†’ browser asks permission.
2.  We store {game,date} in localStorage (demo) â€“ in production POST it to your server.
3.  When you (the owner) want to alert subscribers, send a Web-Push message to each stored subscription.
â€“ Node example (uses web-push package):
const webpush=require('web-push');
webpush.setVapidDetails('mailto:you@site.com',publicVapidKey,privateVapidKey);
webpush.sendNotification(subscription,JSON.stringify({title:'Fantasy Tactics 3',body:'Out today!'}));

----
PUTTING IT ON GOOGLE
1.  Push the folder to GitHub â†’ enable GitHub Pages (Settings â†’ Pages â†’ branch:main).
2.  Visit Search Console â†’ Add property â†’ URL prefix â†’ verify with the HTML file Google gives you.
3.  Submit sitemap (already crawler-friendly) and request indexing.
Your pages will usually show up within 24 h for site:yourdomain.com searches.
Thatâ€™s itâ€”open index.html, click BROWSE DEALS, scroll, search, and subscribe.
