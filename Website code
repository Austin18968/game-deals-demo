async function loadDeals(){
  if(deals.length) return renderDeals();
  const res = await fetch('https://www.cheapshark.com/api/1.0/deals?storeID=1&upperPrice=50&pageSize=30');
  const data = await res.json();
  deals = data.map(d=>({
    title: d.title,
    sale:  d.salePrice,
    normal:d.normalPrice,
    thumb: d.thumb,
    dealID:d.dealID
  }));
  renderDeals();
}
function renderDeals(){
  dealsUL.innerHTML = deals.map(g=>`
    <li class="card">
      <img src="${g.thumb}" alt="">
      <div class="info">
        <div class="title">${g.title}</div>
        <div class="price">$${g.sale} <span class="old">$${g.normal}</span></div>
      </div>
      <a class="notify" href="https://www.cheapshark.com/redirect?dealID=${g.dealID}" target="_blank">View Deal</a>
    </li>`).join('');
}

/* ---------- 2. UPCOMING (static demo) ---------- */
function loadUpcoming(){
  upcoming = [
    {title:"Grand Touring Saga", date:"2025-07-15", img:"https://via.placeholder.com/150x150/444/fff?text=GT+Saga"},
    {title:"Cyber Runner 2142", date:"2025-08-20", img:"https://via.placeholder.com/150x150/444/fff?text=Cyber"},
    {title:"Fantasy Tactics 3",  date:"2025-09-01", img:"https://via.placeholder.com/150x150/444/fff?text=FT3"},
    {title:"Space Frontiers",   date:"2025-10-10", img:"https://via.placeholder.com/150x150/444/fff?text=SF"}
  ];
  renderUpcoming();
}
function renderUpcoming(){
  upcomingUL.innerHTML = upcoming.map(g=>`
    <li class="card">
      <img src="${g.img}" alt="">
      <div class="info">
        <div class="title">${g.title}</div>
        <div>Releases: ${g.date}</div>
      </div>
      <button class="notify" onclick="subscribeNotify('${g.title}','${g.date}')">Notify me</button>
    </li>`).join('');
}

/* ---------- 3. LIVE SEARCH ---------- */
searchInp.addEventListener('input',()=>{
  const q = searchInp.value.toLowerCase();
  filterList(dealsUL,deals,q);
  filterList(upcomingUL,upcoming,q);
});
function filterList(ul,list,q){
  const cards = ul.querySelectorAll('.card');
  list.forEach((g,i)=>{
    cards[i].style.display = g.title.toLowerCase().includes(q) ? '' : 'none';
  });
}

/* ---------- 4. PUSH NOTIFICATIONS ---------- */
// Register service-worker & ask permission
if('serviceWorker' in navigator){
  navigator.serviceWorker.register('sw.js').then(reg=>console.log('SW registered'));
}
function subscribeNotify(game,date){
  Notification.requestPermission().then(perm=>{
    if(perm!=='granted'){ flash('Permission denied'); return; }
    // Store subscription (demo: just localStorage)
    const subs = JSON.parse(localStorage.getItem('subs')||'[]');
    if(subs.find(s=>s.game===game)){ flash('Already subscribed'); return; }
    subs.push({game,date});
    localStorage.setItem('subs',JSON.stringify(subs));
    flash(`âœ… You'll be notified about ${game}`);
    // TODO: send subs to your real server here
  });
}
function flash(msg){
  toast.textContent=msg; toast.style.display='block';
  setTimeout(()=>toast.style.display='none',2500);
}

----
FILE: sw.js  (service-worker for push)
// Minimal SW â€“ needed for push permission badge & future real pushes
self.addEventListener('push',e=>{
  const data = e.data.json();
  self.registration.showNotification(data.title,{
    body:data.body,
    icon:'icon-192.png',
    badge:'icon-192.png'
  });
});

